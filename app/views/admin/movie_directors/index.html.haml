#content
  - @movies.each do |movie|
    #movie_directors.widget
      .top
      .middle
        %h3
          Directores de
          = movie.title
        %table.data
          %tr
            %th Película
            %th Director
          - movie.movie_directors.each do |movie_director|
            %tr
              %td= h movie_director.movie.title
              %td= h movie_director.director.name
              %td= link_to 'Editar', edit_admin_movie_director_path(movie_director), :class => "edit"
              %td= link_to 'Eliminar', [:admin, movie_director], :confirm => '¿Estás seguro?', :method => :delete, :class => "delete"
      .bottom
    .clear
#sidebar
  #actions.widget
    .top
    .middle
      %h3 Acciones
      %p
        = link_to 'Nuevo director de película', new_admin_movie_director_path
    .bottom
  .clear

