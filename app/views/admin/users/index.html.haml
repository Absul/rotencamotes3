          %tr
            %td= h link_to user.name,user
            %td= link_to 'Editar', edit_admin_user_path(user), :class => "edit"
            %td= link_to 'Eliminar', [:admin, user], :confirm => 'Estás seguro?', :method => :delete, :class => "delete"
    .bottom
.clear

