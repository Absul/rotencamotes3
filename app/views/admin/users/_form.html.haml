#content
  = f.error_messages
  #user.widget
    .top
    .middle
      %h3 Usuario
      - f.inputs do
        = f.input :first_name, :label => 'Nombre'
        = f.input :last_name, :label => 'Apellido'
        = f.input :email
        = f.input :password, :as => :password, :label => 'ContraseÃ±a'
        = f.input :born_at, :as => :date, :start_year => 1900, :label => 'Nacido el'
        %li
          = f.label :roles, "Miembro de "
          - User.roles_list.each do |role| 
            = check_box_tag "user[member_of][]", role, @user.member_of.include?(role)
            = role.humanize
          = hidden_field_tag "user[member_of][]", ""
        </p>
        
      - f.buttons do
        = f.commit_button commit_label
      %br
      = link_to 'Regresar', admin_users_path
    .bottom
  .clear

