#content
  #schedule_admin.widget
    .top
    .middle
      %h3 Carteleras activas
      %table.data
        %tr
          %th Cine
          %th Película
          %th Desde
          %th Descripción
          %th Horarios
        - Schedule.active.each do |schedule|
          %tr
            %td= h schedule.theatre.name
            %td= h schedule.movie.title
            %td= h schedule.try(:in_theatre_from).try(:strftime,"%d-%b-%Y")
            %td= h schedule.description
            %td= h schedule.current_showtimes
            %td= link_to 'Editar', edit_admin_schedule_path(schedule), :class => "edit"
            %td= link_to 'Eliminar', [:admin, schedule], :confirm => '¿Estás seguro?', :method => :delete, :class => "delete"
    .bottom
  .clear
#sidebar
  #actions.widget
    .top
    .middle
      %h3 Acciones
      %p
        = link_to 'Nueva cartelera', new_admin_schedule_path
    .bottom
  .clear

