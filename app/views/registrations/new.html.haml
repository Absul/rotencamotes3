#content.sessions
  #opiniones
  
  - widget_tag do
    %h2 Registra tu cuenta
    - form_for resource_name, resource, :url => registration_path(resource_name) do |f|
      = f.error_messages
      %p= f.label :email
      %p= f.text_field :email
      %p= f.label :password, "Contraseña"
      %p= f.password_field :password
      %p= f.label :password_confirmation, "Confirma tu contraseña"
      %p= f.password_field :password_confirmation
      %p= f.submit "Registrarse", :class => "create"
    = render :partial => "shared/devise_links"
